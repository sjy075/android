<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <LinearLayout
        android:id="@+id/business_my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F24960"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:padding="15dp"
        >
<!--    头像名称和描述    -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"

        >

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/business_my_tx"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/upimg"
            android:background="@drawable/circle_background"
            />
        <TextView
            android:id="@+id/business_my_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:text="root"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal|center_vertical"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="top"
            android:layout_marginLeft="20dp"
            >


            <TextView
                android:id="@+id/business_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sjy店铺"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#F2FFFFFF"
                />

            <TextView
                android:id="@+id/business_my_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 一个不一样的店铺"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:textColor="#F2FFFFFF"
                />



        </LinearLayout>

    </LinearLayout>

    <!--修改信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/business_my_toolbar"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            >
        </View>
        <TextView
            android:id="@+id/business_my_xgmm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:textColor="#000000"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/gmm"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/path"
            android:layout_marginRight="15dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            >
        </View>
        <TextView
            android:id="@+id/business_my_zx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注销账号"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:textColor="#000000"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/zx"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/path"
            android:layout_marginRight="15dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            >
        </View>
        <TextView
            android:id="@+id/business_my_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出账号"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:textColor="#000000"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/exit"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/path"
            android:layout_marginRight="15dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            >
        </View>



    </LinearLayout>

