<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BuyFoodActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_marginLeft="-20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F24960"
        app:titleTextColor="#FFFFFF"

        >
        <ImageView
            android:id="@+id/buy_food_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_gravity="start"
            />

        <EditText
            android:id="@+id/business_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_edit"
            android:padding="6dp"
            android:hint="搜索商品"
            android:drawableLeft="@drawable/search"
            android:inputType="text"
            />

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ListView
            android:id="@+id/buy_food_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:background="#FFFFFF"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/tb"
                android:padding="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#F24960"
                android:text="￥"
                android:gravity="start|center"
                android:layout_marginLeft="20dp"

                />
            <TextView
                android:id="@+id/user_food_list_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#F24960"
                android:text="0.0"
                android:layout_weight="1"
                android:gravity="start|center"
                />

            <Button
                android:id="@+id/user_buy_food_js_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#F24960"
                android:text="去结算"
                android:textColor="#FFFFFF"
                android:foreground="?android:selectableItemBackground"
                android:textStyle="bold"

                />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>